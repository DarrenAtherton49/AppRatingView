<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#75000000"/>

    <android.support.v7.widget.CardView
        android:id="@+id/appratingcard_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_rating_view_card_height"
        android:layout_gravity="bottom"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingactionbutton_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@id/appratingcard_card_view"
        app:layout_anchorGravity="top|right|end"
        app:fabSize="normal"
        app:elevation="6dp"
        app:theme="@style/Base.Widget.AppCompat.ImageButton"
        android:src="@drawable/ic_app_rating_view_done" />

</android.support.design.widget.CoordinatorLayout>